map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}

server {
    listen 80 default_server;
    server_name _;
    location /iris {
      return 301 $scheme://192.168.1.104:6680/iris;
    }
    location /mopidy/ws {
      return 301 $scheme://192.168.1.104:6680/mopidy/ws;
    }
    location / {
      return 301 $scheme://192.168.1.104:6680;
    }
}

